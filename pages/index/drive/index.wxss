page {
  background: #373737;
  padding-bottom: 60rpx;
}

.bg {
  height: 405rpx;
  overflow: hidden;
  position: relative;
}

.bg image {
  height: 405rpx;
  width: 100%;
}

.bg .shadow {
  width: 100%;
  height: 405rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background: rgba(0, 0, 0, 0.8);
}

.bg .text {
  position: absolute;
  width: 100%;
  height: 405rpx;
  z-index: 2;
  top: 0;
  left: 0;
  color: #fff;
  text-align: center;
}

.bg .text-title {
  font-size: 44rpx;
  letter-spacing: 15rpx;
  color: #fff;
}

.text-sub {
  font-size: 22rpx;
  margin-top: 23rpx;
  color: #fff;
}



.subBtn{
  margin-top: 46rpx;
}