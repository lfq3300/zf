/* pages/carlist/carlist.wxss */
.content{
  width: 100%;
}
.item{
  margin-top: 40rpx;
  height: 227rpx;
  overflow: hidden;
  box-shadow: 0rpx 0rpx 10rpx #999;
  position: relative;
}
.item .item-content{
  width: 100%;
  padding-top: 20rpx;
}
.item .item-content .item-left{ 
  color: #333333;
  font-size: 32rpx;
  font-family: "MYingHeiPRC-W4";
}
.item .item-content .item-left text{
  display: block;
  padding-left:41rpx;
  margin-top: 15rpx
}
.text_one{
  padding-top: 41rpx;
}

.item .item-content .item-img{
  width: 313rpx;
  height: 116rpx;
  margin-right: 21rpx;
}
.item-img image{
  width: 100%;
  height: 116rpx;
}
.carlist{
  margin-bottom: 150rpx;
}
.bottom{
  background: #272A31;
  color: #999999;
  font-size: 20rpx;
  font-family: "MYingHeiPRC-W3";
  text-align: center;
  height: 50rpx;
  line-height: 50rpx;
  position: absolute;
  bottom:0;
  width: 100%;
}


.car-list{
  margin-top: 63rpx;
}
.car-itme{
  height: 170rpx;
  position: relative;
  overflow: hidden;
  margin-bottom: 60rpx;
}
.car-itme  .car-item-bg{
  position: absolute;
  left: 0;
  bottom: 12rpx;
  background: #BFBFBF;
  width: -webkit-calc(100% - 168rpx);
  width: calc(100% - 168rpx);
  width: -moz-calc(100% - 168rpx);
  height: 101rpx;
  z-index: 1;
  padding: 0rpx 0rpx 15rpx 14rpx;
}
.car-item-bg text{
  color:#fff;
  font-size: 34rpx;
}

.car-item-bg text.max-size{
  font-size: 85rpx;
  font-weight:bold;
}
.car-item-bg text.min-size{
  font-size: 16rpx;
}

.car-itme .car-item-img{
  position: absolute;
  right: 0;
  bottom: -5rpx;
  height: 175rpx;
  width:334rpx;
  z-index: 2;
}



.car-item-bg  .flex-column{
    padding-left: 14rpx;
}
.car-item-bg text.car-name-min-size{
  font-size:35rpx;
  line-height:154rpx;
}