<view class='bg'>
  <image src='/../images/banner.png'></image>
  <view class='shadow'></view>
  <view class='text'>快速查价</view>
</view>
<view class='padding-border'>
  <form bindsubmit="formSubmit">
    <view class='from-assembly flex-default flex-center'>
      <text>车款</text>
      <picker class='flex1' bindchange='bingCarStyle' value="{{carStyleIndex}}" range="{{carStyle}}">
        <view class="from-assembly-value">{{carStyle[carStyleIndex]}}</view>
      </picker>
      <text class='triangle'></text>
    </view>
    <view class='from-assembly flex-default flex-center'>
      <text>车型</text>
      <picker class='flex1' bindchange='bingCarType' value="{{carTypeIndex}}" range="{{carType}}">
        <view class="from-assembly-value">{{carType[carTypeIndex]}}</view>
      </picker>
      <text class='triangle'></text>
    </view>
    <view class='from-assembly flex-default flex-center'>
      <text>经销商</text>
      <picker class='flex1' bindchange='bingDis' value="{{carDisIndex}}" range="{{carDis}}">
        <view class="from-assembly-value">{{carDis[carDisIndex]}}</view>
      </picker>
      <text class='triangle'></text>
    </view>
    <view class='from-assembly flex-default'>
      <text>姓名</text>
      <input class='flex1 from-assembly-input' placeholder='请输入您的姓名'></input>
    </view>
    <view class='from-assembly flex-default'>
      <text>手机号码</text>
      <input class='flex1 from-assembly-input' placeholder='请输入手机号码'></input>
    </view>
    <view class='from-assembly flex-default from-assembly-no-right'>
      <text>验证码</text>
      <input class='flex1 from-assembly-input' placeholder='请输入验证码'></input>
      <button class="from-assembly-phone-btn">获取验证码</button>
    </view>
    <view class='from-assembly flex-default'>
      <text>备注</text>
      <input class='flex1 from-assembly-input' placeholder=''></input>
    </view>
     <button class="subBtn">立即询价</button>
     <navigator class="explain">询价说明</navigator>
  </form>
</view>