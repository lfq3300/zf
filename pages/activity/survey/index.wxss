page{
  background: #373737;
}
.list navigator{
  margin-top: 60rpx;
  height: 252rpx;
  position: relative;
  border-radius: 15rpx;
  overflow: hidden;
}
.list navigator image,
.bg{
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  width: 100%;
  height: 252rpx;
}
.bg {
  z-index: 2;
  padding: 0 0 0 32rpx;
  box-sizing: border-box;
  background: #434343;
}
.bg view{
  color: #FFF;
  font-size: 30rpx;
  font-weight: 900;
}
.bg .date{
  font-size: 18rpx;
  margin-top: 20rpx;
}
.title{
  margin-top: 30rpx;
}
.btn{
  position: absolute;
  height: 60rpx;
  width: 150rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 26rpx;
  background: #D1A24B;
  bottom: 26rpx;
  left: 32rpx;
  z-index: 10;
  font-weight: 800;
  color: #1B1B1B;
}
.btn.old{
  background: #AAAAAA;
  color: #FFF;
}