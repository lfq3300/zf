<view class='title'>
  活动报名
</view>
<view class='padding-border'>
  <form bindsubmit="formSubmit">
    <view class='from-assembly flex-default'>
      <text>姓名</text>
      <input class='flex1 from-assembly-input' name='contactName' placeholder='请输入您的姓名'></input>
    </view>
    <view class='from-assembly flex-default'>
      <text>称谓</text>
      <radio-group class="gender">
        <label>
          <radio value='1' name="sex" checked/> 先生
        </label>
        <label>
          <radio value='2' name="sex" />女士
        </label>
      </radio-group>
    </view>
    <view class='from-assembly flex-default'>
      <text>手机号码</text>
      <input class='flex1 from-assembly-input' placeholder='请输入手机号码' name='phone' bindinput="phoneInput"></input>
    </view>
    <view class='from-assembly flex-default from-assembly-no-right'>
      <text>验证码</text>
      <input class='flex1 from-assembly-input' placeholder='请输入验证码' name='code'></input>
      <button class="from-assembly-phone-btn" bindtap='getPhoneCode'>获取验证码</button>
    </view>
    <view class='from-assembly flex-default'>
      <text>邮箱</text>
      <input class='flex1 from-assembly-input' name='contactName' placeholder='请输入您的邮箱'></input>
    </view>
       <view class='from-assembly flex-default flex-center'>
      <text>城市</text>
     <picker class='flex1' bindchange='bingCity' value="{{cityIndex}}" range="{{city}}">
        <view class="from-assembly-value">{{city[cityIndex]}}</view>
      </picker>
      <text class='triangle'></text>
    </view>
     <view class='agree flex-default'>
      <checkbox></checkbox>
    <navigator>我已阅读并接受个人信息保护法律声明。</navigator>
    </view>
    <button class="subBtn" formType="submit">提交申请</button>
  </form>
</view>